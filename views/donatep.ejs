            <option value="Pitchforks"> Pitchforks </option>
            <option value="Barrett"> Barrett </option>
            <option value="Tooker"> Tooker </option>
            <option value="Hassyampa"> Hassyampa </option>
            <option value="Manzanita"> Manzanita </option>
        </select>
        <br><br>
        <label for="swipes"> Swipes: </label>
        <select name="swipes" id="swipes" value="<%= locals.swipes %>">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
